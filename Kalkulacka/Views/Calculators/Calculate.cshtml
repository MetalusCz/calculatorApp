@model Kalkulacka.Models.Calculator

@{
    ViewData["Title"] = "Calculator";
}
<div class="row">
    <div class="col-md-6">
        <h3 class="text-decoration-underline">Calculator</h3>



        <br />

        <div>
            @using (Html.BeginForm("Create", "Calculators", FormMethod.Post)) {
                <table class="border border-2 border-dark">
                    <tr>
                        <td colspan="4" class="border border-2 border-dark m-2">
                            <input asp-for="Input" id="Input" />
                        </td>
                    </tr>
                    <tr>
                        <td><input type="button" class="btn btn-primary" value="1" onclick="addTextToInput('1')" /></td>
                        <td><input type="button" class="btn btn-primary" value="2" onclick="addTextToInput('2')" /></td>
                        <td><input type="button" class="btn btn-primary" value="3" onclick="addTextToInput('3')" /></td>
                        <td><input type="button" class="btn btn-dark" value="+" name="addTextToInput(+)" onclick="addTextToInput('+')" /></td>
                    </tr>
                    <tr>
                        <td><input type="button" class="btn btn-primary" value="4" onclick="addTextToInput('4')" /></td>
                        <td><input type="button" class="btn btn-primary" value="5" onclick="addTextToInput('5')" /></td>
                        <td><input type="button" class="btn btn-primary" value="6" onclick="addTextToInput('6')" /></td>
                        <td><input type="button" class="btn btn-dark" value="-" name="addTextToInput(-)" onclick="addTextToInput('-')" /></td>
                    </tr>
                    <tr>
                        <td><input type="button" class="btn btn-primary" value="7" onclick="addTextToInput('7')" /></td>
                        <td><input type="button" class="btn btn-primary" value="8" onclick="addTextToInput('8')" /></td>
                        <td><input type="button" class="btn btn-primary" value="9" onclick="addTextToInput('9')" /></td>
                        <td><input type="button" class="btn btn-dark" value="*" name="addTextToInput(*)" onclick="addTextToInput('*')" /></td>
                    </tr>
                    <tr>
                        <td><input type="button" class="btn btn-primary" value="0" onclick="addTextToInput('0')" /></td>
                        <td><input type="button" class="btn btn-primary" value="." onclick="addTextToInput('.')" /></td>
                        <td><input type="button" class="btn btn-warning" value="C" name="deleteButton" onclick="deleteInput()" /></td>
                        <td><input type="button" class="btn btn-dark" value="/" name="addTextToInput(/)" onclick="addTextToInput('/')" /></td>
                    </tr>
                    <tr>
                        <td><input type="submit" class="btn btn-danger" value="=" name="Submit"></td>
                    </tr>
                </table>
            }
        </div>
    </div>
    <div class="col-md-6">
        <h3 class="text-decoration-underline">History</h3>

        <div class="p-2">
            <ul class="list-unstyled">
                @foreach (var h in ViewBag.History) {
                    <li>@h.Input</li>
                }
            </ul>
        </div>
    </div>
</div>


<script>
    function addTextToInput(text) {
        let input = document.getElementById('Input');
        input.value += text;
    }
    function deleteInput() {
        let input = document.getElementById('Input');
        input.value = '';
    }

</script>